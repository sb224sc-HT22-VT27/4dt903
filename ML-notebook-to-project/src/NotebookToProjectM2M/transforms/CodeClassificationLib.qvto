import transformationutils.CodeBlockClassifier;	

library CodeClassificationLib;

/**
 * Classifies a code block by invoking an AI API.
 * Falls back to random classification if the API call fails.
 * @param code The code to classify
 * @return One of: PREPROCESS, TRAIN, or PREDICT
 */
helper classifyCodeBlockQVTo(code : String) : String {
	return CodeBlockClassifier::classifyCodeBlockJava(code);
}

/**
 * Returns a comment with the classification.
 * @param code The code to classify
 * @return A comment string with the classification
 */
helper getClassificationCommentQVTo(code : String) : String {
	return CodeBlockClassifier::getClassificationCommentJava(code);
}

/**
 * Returns a random classification for a code block.
 * @return One of: PREPROCESS, TRAIN, or PREDICT
 */
helper classifyCodeBlockQVToRandom() : String {
	return CodeBlockClassifier::classifyCodeBlockJavaRandom();
}

/**
 * Returns a comment with the classification.
 * @return A comment string with the classification
 */
helper getClassificationCommentQVToRandom() : String {
	return CodeBlockClassifier::getClassificationCommentJavaRandom();
}