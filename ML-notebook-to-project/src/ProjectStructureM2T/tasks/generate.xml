<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="ProjectStructureM2T">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse/modeling-2025-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../OGExample"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="ProjectStructureM2T.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/ProjectStructureM2T/bin"/>
    </path>

    <path id="ProjectStructureM2T.classpath">
        <path refid="ProjectStructureM2T.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="ProjectStructureM2T.libraryclasspath.alljars">
        <pathelement location="../ProjectStructureM2T/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="ProjectStructureM2T.classpath.alljars">
        <path refid="ProjectStructureM2T.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="ProjectStructureM2T.main.Generate" classpathref="ProjectStructureM2T.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="ProjectStructureM2T.main.Generate" classpathref="ProjectStructureM2T.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
