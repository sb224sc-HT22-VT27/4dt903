<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="cloudDeploymentIaC">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/modeling-2025-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="cloudDeploymentIaC.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/cloudDeploymentIaC/bin"/>
    </path>

    <path id="cloudDeploymentIaC.classpath">
        <path refid="cloudDeploymentIaC.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="cloudDeploymentIaC.libraryclasspath.alljars">
        <pathelement location="../cloudDeploymentIaC/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="cloudDeploymentIaC.classpath.alljars">
        <path refid="cloudDeploymentIaC.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="cloudDeploymentIaC.main.Generate" classpathref="cloudDeploymentIaC.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="cloudDeploymentIaC.main.Generate" classpathref="cloudDeploymentIaC.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
