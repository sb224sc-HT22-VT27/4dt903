<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="olympicsM2Tlive">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/modeling-2025-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="olympicsM2Tlive.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/olympicsM2Tlive/bin"/>
    </path>

    <path id="olympicsM2Tlive.classpath">
        <path refid="olympicsM2Tlive.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="olympicsM2Tlive.libraryclasspath.alljars">
        <pathelement location="../olympicsM2Tlive/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="olympicsM2Tlive.classpath.alljars">
        <path refid="olympicsM2Tlive.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="olympicsM2Tlive.main.Generate" classpathref="olympicsM2Tlive.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="olympicsM2Tlive.main.Generate" classpathref="olympicsM2Tlive.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
